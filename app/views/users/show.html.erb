<div class="row">

  <!-- Maincontent -->
  <div class="col-md-12">

    <!-- MapArea -->
    <p class="lead text-muted">Seattle Area: <span class="badge" style="font-size: 1.2em; vertical-align: text-bottom;"><%= @user.title %></span></p>
    <div class="map-container" style="margin-bottom: 20px">
      <div id="map"></div>
    </div>
    <!-- <img class="img-responsive" src="http://placehold.it/800x300" alt=""> -->
    <!-- /MapArea -->

    <!-- FeaturedCafe -->
    <div class="thumbnail col-sm-10">
      <div class="featured">
        <div class="caption-full">
          <h4 class="pull-right"><%= @user.address %></h4>
          <h4><a href="#"><%= @user.title %></a>
          </h4>
          <p>
            (Cafe Discription)
            Lorem ipsum dolor sit amet, consectetur adipisicing elit,
            sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
          </p>
        </div>
      </div>

      <div class="ratings">
        <p class="pull-right">3 reviews</p>
        <p>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star-o"></i>
          4.0 stars
        </p>
      </div>
    </div>

    <div class="featured-image thumbnail col-sm-2" style="">
      <img src="<%= @user.description %>" alt="" class="img-thumbnail" style="overflow: hidden;">
    </div>
    <!-- /FeaturedCafe -->


    <!-- ReviewArea -->
    <div class="well">
      <h3 class="text-muted">Reviews</h3>
      <%= form_for @comment, class: "form-horizontal" do |f| %>
        <div class="col-sm-8" style="padding: 0;">
          <div class="form-group">
            <%= f.text_field :text, class: "form-control", placeholder: "Comment" %>
          </div>
        </div>
        <div class="col-sm-2" style="padding: 0;">
          <div class="form-group">
            <%= select_tag :rate, options_for_select([5,4,3,2,1]), class: "form-control" %>
          </div>
        </div>
        <div class="col-sm-2" style="padding: 0;">
          <div class="form-group">
            <%= f.hidden_field :user_id %>
            <button type="submit" class="btn btn-default">
              <i class="fa fa-comments-o fa-lg" aria-hidden="true"></i> Comment
            </button>
          </div>
        </div>
      <% end %>

      <hr>

      <div class="row">
        <div class="col-md-12">
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star-o"></i>
          Anonymous
          <span class="pull-right"><%= @comments.created_at.strftime("%b / %d") %></span>
          <p><%= @comments.text %></p>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-md-12">
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          Anonymous
          <span class="pull-right">Nov / 06</span>
          <p>I've alredy ordered another one!</p>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-md-12">
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star"></i>
          <i class="fa fa-star-o"></i>
          Anonymous
          <span class="pull-right">Nov / 06</span>
          <p>I've seen some better than this, but not at this price. I definitely recommend this item.</p>
        </div>
      </div>
    </div>
    <!-- /ReviewArea -->

    <!-- CafeIndex -->
    <div class='row cafe-container'>
      <% @users.each do |user| %>
        <div class='col-sm-4 cafe-outbox'>
          <div class='thumbnail cafe-box' style='min-height: 415px'>
            <a href="/users/<%= user.id %>"><img src="<%= user.description %>" style="width: 220px; height: 280px; overflow: hidden;" /></a>
            <div class='caption'>
              <h3>
                <%= user.title %>
              </h3>
              <div class='cafe-info text-muted'>
                Coffee / Mocha / Late
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <!-- /CafeIndex -->

  </div>
  <!-- /Maincontent -->

  <!-- Sidebar -->
  <div class="col-md-12">
    <p class="lead">Cafe Ranking</p>
    <div class="list-group">
      <% @ranking.each.with_index(1) do |rank, i| %>
        <a href="/users/<%= rank.id %>" class="list-group-item"><span class="badge"><%= i %></span> <%= rank.title %></a>
      <% end %>
    </div>
  </div>
  <!-- /Sidebar -->

</div>
<!-- /row -->
